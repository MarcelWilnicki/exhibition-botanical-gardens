<script type="text/javascript">
var song = document.getElementById('audio');
var url = window.location.href;

if(url.slice(-1) != '/'){
  var url = url + '/';
}

if(url.charAt(url.length-3) == '/'){
  var lastCharacter = url.charAt(url.length-2);
  var language = url.substring(url.length - 5, url.length);
  var language = language.substring(0, 2);
} else if (url.charAt(url.length-4) == '/'){
  var lastCharacter = url.substring(url.length - 3, url.length);
  var lastCharacter = lastCharacter.substring(0,2);
  var language = url.substring(url.length - 6, url.length);
  var language = language.substring(0, 2);
}


function play() {
  song.play();
}

function pause() {
  song.pause();
}

function playAgain() {
  if (song.paused) {
    song.currentTime = 0;
    song.play();
  } else {
    song.currentTime = 0;
    song.play();
  }
}

$('#set_polish_butt').click(function() {
  $.cookie('language', 'pl', {
    expires: 24 * 60 * 60 * 1000,
    path: '/'
  });
});

$('#set_english_butt').click(function() {
  $.cookie('language', 'en', {
    expires: 24 * 60 * 60 * 1000,
    path: '/'
  });
});

function moveToNext() {
  var currentStand = parseInt(lastCharacter, 10);
  if (currentStand < 13) {
    var nextStand = currentStand + 1;
    window.location.href = '/' + language + '/' + nextStand;
  }
}

function moveToPrevious() {
  var currentStand = parseInt(lastCharacter, 10);
  if (currentStand != 1) {
    var previousStand = currentStand - 1;
    window.location.href = '/' + language + '/' + previousStand;
  }
}

function moveToPolish() {
  window.location.href = "/pl/" + lastCharacter;
}

function moveToEnglish() {
  window.location.href = "/en/" + lastCharacter;
}

</script>
